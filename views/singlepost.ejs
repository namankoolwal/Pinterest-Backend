<% include ./partials/header.ejs %>


<section class="text-gray-600 body-font  px-20">
    <div class="container bg-gray-900 mx-auto flex px-5 rounded-xl py-16 md:flex-row flex-col items-stretch">
      <div class=" lg:max-w-lg lg:w-full md:w-1/2 w-5/6 mb-10 md:mb-0 rounded-l-2xl overflow-hidden bg-gray-700">
        <img class="object-cover object-center rounded-l-2xl" alt="hero" src="data:<%= post.img.contentType %>;base64,<%= post.img.data.toString('base64') %>">
      </div>
      <div class="relative lg:flex-grow bg-gray-700 rounded-r-2xl py-5 md:w-1/2 lg:pl-10 md:pl-7 flex flex-col md:items-start md:text-left items-start justify-start text-left ">
        <h1 class="title-font sm:text-4xl text-3xl mb-8 mt-2 font-medium text-white capitalize"> <%= post.posttext %> </h1>
        <span class="bg-gray-300 text-gray-900 px-3 py-0.5 rounded-r-full absolute top-0 left-0 text-sm flex items-center justify-center"><%=post.tag || 'tag' %> </span>
        <p class="mb-8 leading-relaxed text-gray-300 text-justify text-balance pr-5"><%= post.postDesc %></p>
      </div>
    </div>
  </section>


